<resources>

    <style name="Widget.Theme.Monocle.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.Monocle.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="TransparentDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="groupStyleteal_300cornerRadius">
        <item name="android:background">@drawable/rectangle_bg_teal_300_radius_18</item>
    </style>
    <style name="groupStyleindigo_A200cornerRadius">
        <item name="android:background">@drawable/rectangle_bg_indigo_a200_radius_10</item>
    </style>
    <style name="whitecornerRadius">
        <item name="android:background">@drawable/whiteroundedcorner</item>
    </style>

    <style name="ButtonTextStyle" parent="TextAppearance.MaterialComponents.Button">
        <!-- Customize text attributes here -->
        <item name="android:textSize">@dimen/_16pxv</item>
        <item name="android:textColor">@color/black</item>
        <!-- Add other text attributes as needed -->
    </style>

</resources>