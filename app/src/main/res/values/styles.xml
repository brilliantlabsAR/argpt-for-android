<!--    </style>-->

    <style name="ButtonTextStyle" parent="TextAppearance.MaterialComponents.Button">
        <!-- Customize text attributes here -->
        <item name="android:textSize">@dimen/_16pxv</item>
        <item name="android:textColor">@color/black</item>
        <!-- Add other text attributes as needed -->
    </style>

</resources>